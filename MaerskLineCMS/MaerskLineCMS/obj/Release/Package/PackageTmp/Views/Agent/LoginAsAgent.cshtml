@model MaerskLineCMS.Models.agent

@{
    ViewBag.Title = "LoginAsAgent";
}

<h2>Login As Agent</h2>

@using (Html.BeginForm("LoginAsAgent", "Agent", FormMethod.Post))
{
<fieldset>

    @Html.AntiForgeryToken()

    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="row">
            <div class="alert alert-danger col-md-12">
                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary(false, "Errors: ")
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(a => a.agentUsername) :
        </div>
        <div class="col-md-2">
            @Html.TextBoxFor(a => a.agentUsername)
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(a => a.agentPassword) :
        </div>
        <div class="col-md-2">
            @Html.TextBoxFor(a => a.agentPassword)
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
            <input class="btn btn-default " type="submit" value="Login" />
        </div>
    </div>

</fieldset>
}